"""
Setup script for Recursive Entropy Calculus package
"""

from setuptools import setup, find_packages
import os

# Read README for long description
def read_readme():
    if os.path.exists('README.md'):
        with open('README.md', 'r', encoding='utf-8') as f:
            return f.read()
    return "Recursive Entropy Calculus framework"

# Read requirements
def read_requirements():
    if os.path.exists('requirements.txt'):
        with open('requirements.txt', 'r') as f:
            return [line.strip() for line in f if line.strip() and not line.startswith('#')]
    return []

setup(
    name="recursive-entropy-calculus",
    version="0.1.0",
    author="[Author Name]",
    author_email="[email@institution.edu]",
    description="A mathematical framework extending Shannon entropy to hierarchical systems",
    long_description=read_readme(),
    long_description_content_type="text/markdown",
    url="https://github.com/[username]/recursive-entropy-calculus",
    packages=find_packages(),
    classifiers=[
        "Development Status :: 3 - Alpha",
        "Intended Audience :: Science/Research",
        "License :: OSI Approved :: MIT License",
        "Programming Language :: Python :: 3",
        "Programming Language :: Python :: 3.8",
        "Programming Language :: Python :: 3.9",
        "Programming Language :: Python :: 3.10",
        "Programming Language :: Python :: 3.11",
        "Topic :: Scientific/Engineering :: Information Analysis",
        "Topic :: Scientific/Engineering :: Mathematics",
    ],
    python_requires=">=3.8",
    install_requires=read_requirements(),
    extras_require={
        'dev': ['pytest>=6.2.0', 'black>=21.0.0', 'flake8>=3.9.0'],
        'vis': ['seaborn>=0.11.0', 'plotly>=5.0.0']
    },
    entry_points={
        'console_scripts': [
            'rec-reproduce=experiments.reproduce_tables:main',
            'rec-example=examples.basic_example:main',
        ],
    },
    include_package_data=True,
    zip_safe=False,
    keywords="entropy information-theory hierarchical-systems recursion mathematics",
    project_urls={
        "Bug Reports": "https://github.com/[username]/recursive-entropy-calculus/issues",
        "Source": "https://github.com/[username]/recursive-entropy-calculus",
        "Documentation": "https://github.com/[username]/recursive-entropy-calculus/blob/main/paper/recursive_entropy_calculus.md",
    },
)
